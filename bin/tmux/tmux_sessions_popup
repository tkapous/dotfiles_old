#!/bin/bash

current_session=$(tmux display-message -p '#S')

session=$(tmux list-sessions -F "#{?session_last_attached,#{session_last_attached},0000000000} #S #{session_path}" \
	| sort -rn \
	| sed 's/[^ ]*\s\+//'\
	| column -t\
	| fzf --tmux 30%,30% --margin=0,1 --color=16 --header-lines=1 --reverse --no-info --bind 'alt-\:accept' \
	| column -t\
	| sed 's/ .*$//')

if [ "$session" == '' ] ; then
	exit 0
fi

if [ "$TMUX" != '' ] ; then
	tmux switch-client -t "$session"
else
	tmux a -t "$session"
fi
