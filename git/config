[user]
	email = biggybi@pm.me
	name = biggybi
[init]
	templatedir = ~/.git_template
	defaultBranch = main
[submodule]
  recurse = true
[push]
  recurseSubmodules = on-demand
[core]
	pager = nvim -R -
[pager]
	show = nvim -R -
	color = false
[pull]
	rebase = false
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c "Gvdiffsplit" "$MERGED"
[alias]
	ctags = !.git/hooks/ctags
  s     = status --short
  c     = commit
	cm    = commit -m
	ca    = commit -am
  a     = add
  aa    = add --all
	co    = checkout
	cob   = checkout -b
	sm    = submodule
	smu   = submodule update --init --recursive
	sms   = submodule status
	sma   = submodule add
  smp   = submodule foreach git pull origin master
	p     = pull
  deleted = log --diff-filter=D --summary
  deleted-files = log --diff-filter=D --summary --name-only --no-commit-id
[color]
	ui = true
	pager = false
